@if (!Settings.UseWebpackDevServer)
{
    @section styles {
        <link rel="stylesheet" href="~/dist/@(WebpackAsset.Style("common"))" />
    }
}

@section scripts {
    @if (Settings.UseWebpackDevServer)
    {
        <script src="@(Settings.WebpackDevServerRoot)/home.js"></script>
    }
    else
    {
        <script src="~/dist/@(WebpackAsset.Script("common"))"></script>
        <script src="~/dist/@(WebpackAsset.Script("home.vendor"))"></script>
        <script src="~/dist/@(WebpackAsset.Script("home"))"></script>
    }
}
